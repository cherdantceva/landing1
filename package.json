{
  "name": "landing1",
  "version": "0.0.0",
  "description": "Тренировочный лендинг",
  "main": "index.html",
  "scripts": {
      "mkdir": "mkdir -p dist/assets",
      "preimport-img": "mkdir -p dist/img",
      "import-img": "cp -r src/img dist",
      "preimport-fonts": "mkdir -p dist/fonts",
      "import-fonts": "cp -r src/fonts dist",
      "precompile-sass": "npm run mkdir",
      "compile-sass": "node-sass src/styles/index.sass > dist/assets/index.css",
      "postcompile-sass": "postcss --use autoprefixer dist/assets/index.css -d dist/assets",
      "watch-sass": "node-sass --watch --recursive --output dist/assets --source-map true --source-map-contents src/styles",
      "precopy-html": "npm run mkdir",
      "copy-html": "cp src/index.html dist/index.html",
      "watch": "npm run watch-sass",
      "build": "npm run copy-html && npm run compile-sass && npm run import-img && npm run import-fonts",
      "view": "http-server dist"
  },
  "author": "Cherdantceva Tany",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cherdantceva/landing1"
  },
  "homepage": "",
  "devDependencies": {
    "autoprefixer": "^6.5.1",
    "http-server": "^0.9.0",
    "node-sass": "^3.8.0",
    "postcss-cli": "^2.6.0",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "jquery": "^3.1.1"
  }
}
